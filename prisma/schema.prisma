generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  email           String    @unique
  username        String    @unique
  password        String
  token           String?
  tokenExpiry     DateTime?
  nftList         String[]
  timeServiceList String[] 
  address         String
}

model TimeService {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  price       Float
  status      ServiceStatus
  ownerId     String
  timeStarted DateTime
  timeEnded   DateTime
  nftId       String?
}

model NFT {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  minterId      String
  timeserviceId String
  tokenURI      String
  tokenID       String
  contract      String
  status        String
  mintTime      DateTime
  transaction   String
}

model Transaction {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  nftId       String   
  price       Float
  buyerId     String
  sellerId    String
  transaction String
}


enum ServiceStatus {
  INIT
  MINT
  COMPLETED
  CANCELED
}
